---
import background from '../assets/background.svg';
---

<div id="container">
	<img id="background" src={background.src} alt="" fetchpriority="high" />
	<main>
		<section id="hero">
			<h1>AsyncSkills</h1>
			<p class="subtitle">Skills-First Remote Job Board</p>
			<p class="description">
				Showcase your portfolio and demonstrable skills. Skip traditional interviews and
				connect with companies offering remote, asynchronous work opportunities.
			</p>
			<section id="links">
				<button class="btn btn-primary mr-4">Browse Jobs</button>
				<button class="btn btn-secondary mr-4">View Companies</button>
				<button class="btn btn-accent">Create Portfolio</button>
			</section>
		</section>
	</main>

	<div id="features" class="box">
		<h2>Skills-First Hiring</h2>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-8">
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h3 class="card-title">üíª Portfolio Showcase</h3>
					<p>Display your GitHub repositories and live project demos</p>
				</div>
			</div>
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h3 class="card-title">üéØ Skills Matching</h3>
					<p>Companies find you based on demonstrable technical abilities</p>
				</div>
			</div>
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h3 class="card-title">üè† Remote First</h3>
					<p>Jobs designed for distributed teams and async communication</p>
				</div>
			</div>
			<div class="card bg-base-100 shadow-xl">
				<div class="card-body">
					<h3 class="card-title">üìù Take-Home Projects</h3>
					<p>Prove your skills through coding challenges, not interviews</p>
				</div>
			</div>
		</div>

		<div class="mt-8">
			<h3 class="text-xl font-bold mb-4">Filter by Skills & Work Style</h3>
			<div class="flex flex-wrap gap-2">
				<button class="btn btn-outline btn-active">All Skills</button>
				<button class="btn btn-outline">Python</button>
				<button class="btn btn-outline">React</button>
				<button class="btn btn-outline btn-success">Remote</button>
				<button class="btn btn-outline btn-info">Async</button>
			</div>
		</div>
	</div>
</div>

<style>
	#background {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		filter: blur(100px);
	}

	#container {
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		height: 100%;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		padding: 16px;
		text-align: center;
		max-width: 800px;
	}

	h1 {
		font-size: 3rem;
		margin: 0.5em 0;
		background: linear-gradient(135deg, #1e3a8a 0%, #dc2626 100%);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: bold;
	}

	.subtitle {
		font-size: 1.5rem;
		color: #6b7280;
		margin: 0.5em 0;
		font-weight: 300;
	}

	.description {
		font-size: 1.2rem;
		color: #4b5563;
		line-height: 1.6;
		margin: 2em 0;
		max-width: 600px;
	}

	#links {
		display: flex;
		gap: 16px;
		margin-top: 2em;
	}

	#links a {
		display: flex;
		align-items: center;
		padding: 14px 24px;
		color: white;
		text-decoration: none;
		transition: all 0.3s ease;
		border-radius: 8px;
		font-weight: 600;
	}

	#links a.button {
		background: linear-gradient(135deg, #1e3a8a 0%, #3b82f6 100%);
		box-shadow: 0 4px 14px rgba(59, 130, 246, 0.3);
	}

	#links a.button:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(59, 130, 246, 0.4);
	}

	#links a.secondary {
		background: linear-gradient(135deg, #dc2626 0%, #ef4444 100%);
		box-shadow: 0 4px 14px rgba(220, 38, 38, 0.3);
	}

	#links a.secondary:hover {
		transform: translateY(-2px);
		box-shadow: 0 6px 20px rgba(220, 38, 38, 0.4);
	}

	#features {
		position: absolute;
		bottom: 16px;
		right: 16px;
		max-width: 400px;
		text-decoration: none;
		transition: background 0.2s;
		backdrop-filter: blur(50px);
	}

	#features:hover {
		background: rgba(255, 255, 255, 0.55);
	}

	.box {
		padding: 24px;
		background: rgba(255, 255, 255, 0.95);
		border-radius: 16px;
		border: 1px solid rgba(255, 255, 255, 0.8);
		box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
	}

	#features h2 {
		margin: 0 0 1.5em;
		font-weight: 600;
		color: #111827;
		font-size: 1.5rem;
		text-align: center;
	}

	.skills-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 16px;
		margin-bottom: 2em;
	}

	.skill {
		text-align: center;
		padding: 12px;
		background: rgba(59, 130, 246, 0.05);
		border-radius: 8px;
	}

	.skill h3 {
		margin: 0 0 0.5em;
		font-size: 1rem;
		font-weight: 600;
		color: #1e40af;
	}

	.skill p {
		margin: 0;
		font-size: 0.85rem;
		color: #6b7280;
		line-height: 1.4;
	}

	.filter-preview {
		border-top: 1px solid #e5e7eb;
		padding-top: 1.5em;
	}

	.filter-preview h3 {
		margin: 0 0 1em;
		font-size: 1.1rem;
		color: #374151;
		text-align: center;
	}

	.filter-buttons {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
		justify-content: center;
	}

	.filter-btn {
		padding: 8px 16px;
		border: 1px solid #d1d5db;
		background: white;
		color: #6b7280;
		border-radius: 20px;
		font-size: 0.85rem;
		cursor: pointer;
		transition: all 0.2s ease;
	}

	.filter-btn:hover {
		border-color: #3b82f6;
		color: #3b82f6;
	}

	.filter-btn.active {
		background: #3b82f6;
		border-color: #3b82f6;
		color: white;
	}

	@media screen and (max-width: 768px) {
		#container {
			display: flex;
			flex-direction: column;
		}

		#hero {
			padding: 2rem 1rem;
		}

		h1 {
			font-size: 2.5rem;
		}

		.subtitle {
			font-size: 1.2rem;
		}

		.description {
			font-size: 1rem;
		}

		#links {
			flex-direction: column;
			width: 100%;
		}

		#links a {
			justify-content: center;
		}

		#features {
			position: static;
			margin: 2rem 1rem 0;
			max-width: none;
		}

		.skills-grid {
			grid-template-columns: 1fr;
		}

		.filter-buttons {
			flex-direction: column;
			align-items: center;
		}
	}
</style>
